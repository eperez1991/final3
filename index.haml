!!!5	
%html
  %head
  %meta{charset:"utf-8"}
    %meta{name:"viewport",content:"width=device-width,intial-scale=1.0"}
    %title {block:PostTitle}{PostTitle}: {/block:PostTitle}{Title}
    %link{rel:"alternate",type:"application/rss+xml",href:"{RSS}"}
    %link{rel:"stylesheet",href:"http://eperez1991.github.io/style.css"}
    
     
  %body
    %header
      %h1 {First Haml}
      
      
      .main
      {block:Posts} 
      {block:text}
      
        .postinfo
        {block:Title}
          %h1 
            %a{href:"{Permalink}"} {Title}
          {/block:Title}
          .content
            {Body}
          .data
            %ul
              %li
                %a{href:"{Permalink}"} Permalink to this post
              {block:HasTags}
              %li Tagged
                %ul
                  {block:Tags}
                  %li
                    %a{href:"{TagURL}"} {Tag}
                  {/block:Tags}
              {/block:HasTags}
        {/block:Text}
        {/block:Posts}